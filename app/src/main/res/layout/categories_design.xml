<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageIV"
        android:layout_marginVertical="8dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/snapchat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/appCategoriesID"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/appCategoriesID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Watch apps"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageIV"
        app:layout_constraintStart_toEndOf="@+id/imageIV"
        app:layout_constraintTop_toTopOf="@+id/imageIV" />

    <View
        android:id="@+id/lineID"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#995C5555"
        android:layout_marginTop="8dp"
        app:layout_goneMarginTop="8dp"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageIV"/>

</androidx.constraintlayout.widget.ConstraintLayout>
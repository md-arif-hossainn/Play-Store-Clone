<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/topChartsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top charts"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start|center_horizontal"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textLayoutID"/>

    <LinearLayout
        android:id="@+id/textLayoutID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="28dp"
        android:background="@drawable/categories_shape"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topChartsTV">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:gravity="center|start"
            android:text="Top free"
            android:paddingStart="5dp"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#995C5555"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:gravity="center|start"
            android:text="Top grossing"
            android:paddingStart="5dp"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#995C5555"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:gravity="center|start"
            android:paddingStart="5dp"
            android:text="Top paid"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>